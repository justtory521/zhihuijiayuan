<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/gray_f8">

        <TextView
            android:id="@+id/layout_title"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/layout_top"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="left|center_vertical">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_city_picker"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_city_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="精选"
                    android:textColor="@color/colorWhite"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="right|center_vertical">

                <ImageView
                    android:id="@+id/btn_scan_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:src="@mipmap/main_btn_scan"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>

        <uk.co.imallan.jellyrefresh.JellyRefreshLayout
            android:id="@+id/jelly_refresh_choice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:headerHeight="0dp"
            app:jellyColor="@color/colorPrimary"
            app:pullHeight="100dp"
            app:triggerHeight="100dp">

        <tendency.hz.zhihuijiayuan.widget.MyScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <com.zhpan.bannerview.BannerViewPager
                    android:id="@+id/banner_view"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    app:bvp_indicator_slide_mode="normal"
                    app:bvp_page_margin="15dp"
                    app:bvp_reveal_width="15dp"
                    app:bvp_interval="4000"
                    app:bvp_can_loop="true"
                    app:bvp_indicator_checked_color="@color/colorAccent"
                    app:bvp_indicator_normal_color="@color/colorGray"
                    app:bvp_indicator_radius="6dp"
                    app:bvp_auto_play="true"
                    app:bvp_page_style="multi_page_scale"
                    app:bvp_indicator_style="circle"
                    app:bvp_indicator_visibility="visible"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:id="@+id/layout_recommend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="12dp"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:gravity="left"
                                android:text="为您推荐"
                                android:textColor="@color/colorBlack"
                                android:textSize="17dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="23dp"
                                android:layout_marginBottom="1dp"
                                android:layout_marginLeft="8dp"
                                android:gravity="bottom"
                                android:text="社会化服务"
                                android:textColor="#333333"
                                android:textSize="12dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_go_sreach"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="12dp"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical"
                            android:onClick="goSreachCard">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:src="@mipmap/ic_go_right_choice" />
                        </LinearLayout>

                    </LinearLayout>


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_recommend"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:visibility="visible">

                        </android.support.v7.widget.RecyclerView>

                        <LinearLayout
                            android:id="@+id/layout_no_recommend"
                            android:layout_width="match_parent"
                            android:layout_height="82dp"
                            android:layout_marginTop="7dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:scaleType="centerInside"
                                android:src="@mipmap/img_no_sreach" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="暂无为您推荐的卡"
                                android:textColor="@color/colorPrimary"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </FrameLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_theme"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </android.support.v7.widget.RecyclerView>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

            </LinearLayout>

        </tendency.hz.zhihuijiayuan.widget.MyScrollView>

        </uk.co.imallan.jellyrefresh.JellyRefreshLayout>

    </LinearLayout>
</layout>
