<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray_f8"
              android:orientation="vertical">

    <include
        layout="@layout/layout_title"/>

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/stl_file_manager"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white"
        app:tl_indicator_color="@color/blue_0d8"
        app:tl_indicator_height="2dp"
        app:tl_indicator_width="44dp"
        app:tl_tab_space_equal="true"
        app:tl_textSelectColor="@color/blue_0d8"
        app:tl_textUnselectColor="@color/gray_88"
        app:tl_textsize="15sp">

    </com.flyco.tablayout.SlidingTabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_file_manager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>



</LinearLayout>