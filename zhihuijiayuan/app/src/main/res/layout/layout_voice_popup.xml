<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal|bottom"
            android:text="按住说话"
            android:textColor="@color/colorTextGray"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/btn_voice" />

            <tendency.hz.zhihuijiayuan.widget.SpreadView
                android:id="@+id/spread_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:spread_center_color="@color/colorAccent"
                app:spread_delay_milliseconds="50"
                app:spread_distance="5"
                app:spread_max_radius="60"
                app:spread_radius="130"
                app:spread_spread_color="@color/colorAccent"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="53dp"
                android:layout_toLeftOf="@id/btn_voice"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/colorTextGray"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="53dp"
                android:layout_toRightOf="@id/btn_voice"
                android:gravity="center"
                android:text="清除"
                android:textColor="@color/colorTextGray"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>
</layout>





