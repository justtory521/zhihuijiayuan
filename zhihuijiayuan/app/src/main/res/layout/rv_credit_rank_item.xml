<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="70dp">

    <ImageView
        android:id="@+id/iv_rank_badge"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/tv_rank_badge"
        android:layout_width="26dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textSize="18sp"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_user_head"
        android:layout_width="30dp"
        android:layout_height="30dp"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@mipmap/ic_me_default_head"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:roundAsCircle="true"
        android:layout_marginLeft="49dp"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/sdv_user_head"
        android:layout_marginLeft="12dp"
        android:layout_centerVertical="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_user_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/gray_22"/>
        <TextView
            android:id="@+id/tv_credit_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginTop="6dp"
            android:textColor="@color/gray_88"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_rank_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textSize="18sp"/>

</RelativeLayout>