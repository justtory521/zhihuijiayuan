<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        layout="@layout/layout_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注意事项"
                    android:textColor="@color/gray_22"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="37dp"
                    android:layout_marginTop="43dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="·将身份证置于拍摄框内"
                    android:textColor="@color/gray_55"
                    android:textSize="15sp"
                    android:layout_marginLeft="37dp"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="·确保身份证内容清晰可见"
                    android:textColor="@color/gray_55"
                    android:textSize="15sp"
                    android:layout_marginLeft="37dp"
                    android:layout_marginTop="12dp"/>


                <ImageView
                    android:id="@+id/btn_add_face"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginLeft="53dp"
                    android:layout_marginRight="53dp"
                    android:layout_marginTop="45dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/btn_card_face"
                    android:layout_gravity="center_horizontal" />

                <ImageView
                    android:id="@+id/btn_add_back"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginLeft="53dp"
                    android:layout_marginRight="53dp"
                    android:layout_marginTop="36dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/btn_card_back"
                    android:layout_gravity="center_horizontal"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="45dp"
                    android:layout_marginLeft="38dp">

                    <CheckBox
                        android:id="@+id/cb_validate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableLeft="@drawable/checkbox_validate"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我已阅读并同意"
                        android:textSize="12sp"
                        android:textColor="@color/gray_66"
                        android:layout_marginLeft="7dp"/>
                    <TextView
                        android:id="@+id/tv_validate_agreement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="《用户协议》"
                        android:textSize="12sp"
                        android:textColor="@color/blue_0d8"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="和"
                        android:textSize="12sp"
                        android:textColor="@color/gray_66"/>
                    <TextView
                        android:id="@+id/tv_validate_privacy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="《隐私声明》"
                        android:textSize="12sp"
                        android:textColor="@color/blue_0d8"/>
                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:id="@+id/btn_send"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="38dp"
                    android:layout_marginRight="38dp"
                    android:layout_marginTop="25dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    android:layout_marginBottom="31dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="提交认证"
                        android:textColor="@color/colorWhite" />
                </android.support.v7.widget.CardView>

            </LinearLayout>

    </ScrollView>
</LinearLayout>
