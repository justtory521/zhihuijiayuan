<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="75dp">

    <TextView
        android:id="@+id/tv_service_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:textColor="@color/gray_33"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_service_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="18dp"
        android:textColor="@color/blue_0d8"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_service_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_service_name"
        android:layout_alignLeft="@id/tv_service_name"
        android:layout_marginTop="13dp"
        android:textColor="@color/gray_88"
        android:textSize="13sp"/>

</RelativeLayout>